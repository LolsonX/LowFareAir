<div class="pagination-wrapper">
  <%== pagy_nav(@pagy) %>
</div>
<div class="container" style="margin-top: 1%">
  <table>
    <thead>
    <tr>
      <th>
        Flight Id
      </th>
      <th>
        Begin Date
      </th>
      <th>
        Origin Airport
      </th>
      <th>
        Destination Airport
      </th>
      <th>
        Seat Class
      </th>
    </tr>
    </thead>
    <tbody>
    <% @records.each do |flight_hist| %>
      <tr>
        <td>
          <%= flight_hist.flight_id %>
        </td>
        <td>
          <%= flight_hist.begin_date %>
        </td>
        <td>
          <%= flight_hist.orig_airport %>
        </td>
        <td>
          <%= flight_hist.dest_airport %>
        </td>
        <td>
          <%= flight_hist.seat_class.capitalize %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>