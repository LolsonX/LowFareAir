
<%= form_tag(flights_path, method: :get, class: "breadcrumb", style: "justify-content: center") do %>
  <div class ="d-inline-flex p-2">
    <div class="form-group d-inline-flex p-2">
      <label style="margin: auto;">From: </label>&nbsp&nbsp
      <%= select_tag('From', options_from_collection_for_select(@cities, "airport", "city_name", selected: params[:From]), class: "custom-select") %>
    </div>
    <div class="form-group d-inline-flex p-2">
      <label style="margin: auto;">To: </label>&nbsp&nbsp
      <%= select_tag('To', options_from_collection_for_select(@cities, "airport", "city_name", selected: params[:To]), class: "custom-select")%>
    </div>
    <div class="form-group" style="align-self: center; margin-left: 1vw">
      <%= submit_tag('Search', class: "btn btn-outline-dark") %>
      <%= link_to "Clear", flights_path, class: "btn btn-outline-dark"%>
    </div>
  </div>
<% end %>
<%== pagy_bootstrap_nav(@pagy) %>
<div class="card-columns">
  <% @flights.each do |flight| %>
    <div class="card card mb-4">
      <div class="card-body">
        <h5 class="card-title"><%= link_to flight.flight_id.to_s, flight %></h5>
        <p class="card-text"> From: <%= flight.origin_city.to_s%></p>
        <p class="card-text"> To: <%= flight.destination_city.to_s %>
      </div>
    </div>
  <% end %>
</div>
